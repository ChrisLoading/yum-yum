<div class="container my-4 ">
	<div class="row d-flex align-items-stretch">
		<!-- 左邊篩選欄 -->
		<div class="col-md-4 d-flex flex-column" id="left-pannel">
			<div class="p-3 rounded bg-white h-100">
				<!-- 放篩選條件 -->
				<div class="d-flex flex-column align-items-center" id="Ifilter-top">
					<div class="Ifilter flex-column align-items-center mt-2" id="Ifilter">



						<!-- 我的食材按鈕 -->
						<input type="radio"name="filter-IAttr" id="IAttr-1" hidden>
						<label class="btn btn-outline-success rounded-4 align-content-center fw-600"
							   for="IAttr-1"
							   onclick="window.location.href='/Cherish/MatchHistory';">
							<span>我的食材</span>
						</label>



						<!-- 別人的食材按鈕 -->
						<input type="radio" checked name="filter-IAttr" id="IAttr-2" hidden>
						<label class="btn btn-outline-success rounded-4 align-content-center fw-600"
							   for="IAttr-2"
							   onclick="window.location.href='/Cherish/MatchHistoryOthers';">
							<span>別人的食材</span>
						</label>
					</div>

				</div>

				<hr style="width: 90%;margin-left: 1rem;">
			</div>
		</div>

		<!-- 右邊卡片內容 -->
		<div class="col-md-8" id="right-pannel">
			@for (int k = 0; k < 3; k++)
			{
				<div class="food-card d-flex flex-wrap mt-2 md-2">
					<div class="col-4">
						<img src="/img/cherish/1.jpg" class="p-3 img-fluid" alt="Food">
					</div>
					<div class="col-8 p-3">
						<div class="d-flex justify-content-between mt-3 mb-3">
							<h5>別人的茄子</h5>
							<div>數量: 4</div>
							<div>截止日期: 2024.11.11</div>
						</div>
						<div class="d-flex justify-content-between mt-3 mb-3 align-items-center">
							<span>購買日期 或 採收日期: 2024-10-31</span>
							<span class="category-label">蔬菜類</span>
						</div>

						<p class="d-flex justify-content: flex-start align-items-center pt-4 pd-4">
							From 台中柯震東 &nbsp;&nbsp;&nbsp;
							<img src="/img/icon/location.svg" alt="Location" style="width: 16px;"> 台中市 大甲區
						</p>
						<div class="cherishMatch d-flex justify-content-between pt-4 pd-4">
							<p><img src="~/img/icon/contacts.svg" alt="Location" style="width: 16px;">聯絡方式: 其他聯絡方式</p>
							<label class="btn-outline-success btn rounded-4 align-content-center fw-600" id="cherishMatch" for="IAttr-1" onclick="window.location.href='/Cherish/MatchHistoryOthersInfo';">
								<svg height="20px" viewBox="0 -960 960 960" width="20px">
									<path d="M480-312q70 0 119-49t49-119q0-70-49-119t-119-49q-70 0-119 49t-49 119q0 70 49 119t119 49Zm0-72q-40 0-68-28t-28-68q0-40 28-68t68-28q40 0 68 28t28 68q0 40-28 68t-68 28Zm0 192q-142.6 0-259.8-78.5Q103-349 48-480q55-131 172.2-209.5Q337.4-768 480-768q142.6 0 259.8 78.5Q857-611 912-480q-55 131-172.2 209.5Q622.6-192 480-192Zm0-288Zm0 216q112 0 207-58t146-158q-51-100-146-158t-207-58q-112 0-207 58T127-480q51 100 146 158t207 58Z" fill="#68AE86"></path>
								</svg>
								<span>查看配對</span>
							</label>
						</div>

					</div>

				</div>
			}
		</div>
	</div>
</div>


@section Scripts {
	<script>
		$('#Ifilter input[type="checkbox"]').change(function () {

			console.log(' 這寫可以寫ajax ' + $(this).prop('checked'));
			console.log(' 這寫可以寫ajax ' + $('#Ifilter input[type="checkbox"]:checked'));

			$(this).prev().toggleClass('selected')
		});

		$('#Ifilter-active,#Cfilter-active,#Dfilter-active').change(function () {
			$(this).parent().next().toggleClass('filter-hide')
		})

		// 動態設定左右邊等高
		window.addEventListener('load', adjustHeight);
		window.addEventListener('resize', adjustHeight);

		function adjustHeight() {
			const leftPanel = document.getElementById('left-pannel');
			const rightPanel = document.getElementById('right-pannel');
			leftPanel.style.height = `${rightPanel.offsetHeight}px`;
		}

	</script>
}
