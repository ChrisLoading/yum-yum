@* @using YumYum.Models; *@
@model YumYum.Models.ViewModels.RecipeAllUser

@await Html.PartialAsync("_PartialBreadcrumb", (List<BreadcrumbItem>)ViewBag.Breadcrumbs)

@section Scripts {
	<script type="text/javascript">
		$(document).ready(function () { $("#btn-edit").click(function () { window.location.href = '@Url.Action("EditInfo", "User")'; }); });</script>
}
<br />
<div class="card w-100" style="width:auto">
	<div class="row g-0">
		<div class="col-md-4" style="text-align:center ;">
			<br />
			@* photo *@
			@if (Model?.userQueryViewModel[0].HeadShot != null)
			{
				<img class="rounded-circle" src="@(Model?.userQueryViewModel[0].HeadShot.ToString())" alt="user-img" width="180" height="180" />
			}
			else
			{
				@* camera *@
				<svg height="150" width="150" class="mb-3">
					@* <circle r="70" cx="75" cy="75" fill="var(--yum-primary-3)" /> *@
					<image x="0" y="0" width="150" height="150" href="/img/icon/EmptyAvatar.svg" />
				</svg>
			}
			<br />
			<br />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<br />
				<h2 class="fw-600">@Model?.userQueryViewModel[0].UserNickname</h2>
				<br />
				<p class="fw-400 mb-3">@Model?.userQueryViewModel[0].UserIntro</p>
